[Unit]
Description=GeddesGhost Streamlit App
After=network.target

[Service]
Type=simple
User=rob
WorkingDirectory=/mnt/field/projects/Geddes-Ghost
EnvironmentFile=/mnt/field/projects/Geddes-Ghost/.env
ExecStart=/mnt/field/projects/Geddes-Ghost/.venv/bin/streamlit run geddesghost.py \
    --server.port=8502 \
    --server.address=0.0.0.0 \
    --server.headless=true \
    --browser.gatherUsageStats=false
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
